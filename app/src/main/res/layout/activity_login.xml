<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAE0E2"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="228dp"
        android:layout_height="129dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="86dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="474dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <EditText
        android:id="@+id/userEmail"

        android:layout_width="261dp"
        android:layout_height="64dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="8dp"
        android:background="#A4B0BD"

        android:ems="10"
        android:hint="Email-id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhoto" />

    <EditText

        android:id="@+id/userPassword"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="261dp"
        android:background="#A4B0BD"

        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/userLogin"
        android:layout_width="127dp"
        android:layout_height="64dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="150dp"
        android:text="Login"
        android:background="#25CCF7"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/Loginpg"
        style="?android:attr/progressBarStyle"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:text="Click on image to register"
        android:textAlignment="center"
        android:textColor="#A4B0BD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>